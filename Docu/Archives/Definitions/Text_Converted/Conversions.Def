	PROCEDURE RealToStr (x: LONGREAL; VAR s: ARRAY OF CHAR; base: LONGINT);
	PROCEDURE StrToInt (s: ARRAY OF CHAR; VAR val: LONGINT; base: LONGINT);

END Conversions.